<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/lavender_startColor"/>
            <stroke android:color="@color/lavender_listBg"
                android:width="2dp"
                />
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/lavender_startColor"
                android:endColor="@color/lavender_endColor"
                android:angle="90"
                />
            <corners android:radius="50dp"/>
        </shape>
    </item>

</selector>